<%= form_for(@footer) do |f| %>
  <% if @footer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@footer.errors.count, "error") %> prohibited this msg from being saved:</h2>

      <ul>
      <% @footer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.hidden_field :cate_id %>
    <h3 class="sub-header"><%= f.label :content_ch,"服務項目-中文" %></h3>
    <%= f.text_area :content_ch ,id: "ckeditor", class: "ckeditor" %>
  </div>

  <div class="form-group">
    <h2 class="sub-header"><%= f.label :content_ch,"服務項目-英文" %></h3>
    <%= f.text_area :content_en ,id: "ckeditor1", class: "ckeditor1" %>
  </div>

  <div class="form-group">

    <button class="btn btn-lg btn-primary" type="submit">確定</button>
  </div>
<% end %>




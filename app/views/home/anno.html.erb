<% if session[:locale] == "en" %>
  <% title( @anno.title_en ) %>
<% elsif session[:locale] == "zh-TW" %>
  <% title( @anno.title    ) %>
<% end %>

<%= content_for  :css do %>
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/product-in.css">
<% end  %>





<%=render '/home/comm/top'%>

<div class="mainArea">
    <div class="container">
        <div class="titleBox">
            <h2 class="title">
                <% if session[:locale] == "en" %>
                  <%=   @anno.title_en%>
                <% elsif session[:locale] == "zh-TW" %>
                  <%=   @anno.title%>
                <% end %>
            </h2>
        </div>


        <div class="row flex-row-reverse">

            <div class="col-lg-9">
                <!-- Content -->
                <section id="content">

                    <% if session[:locale] == "en" %>
                      <%= raw @anno.content_en%>
                    <% elsif session[:locale] == "zh-TW" %>
                      <%= raw @anno.content%>
                    <% end %>

                </section>

            </div>



            <!-- 次選單 -->
            <% announces = Announce.all %>
            <div class="col-lg-3 nopadding">
                <!-- Sidebar -->
                <section id="sidebar">
                    <h3>
                        <%=t("news")%>
                    </h3>
                    <!-- 產品選單 -->
                    <ul class="proList">
                        <% announces.each do |ann| %>
                            <li>
                                <a href="/anno?id=<%=ann.id%>" class="proItem">
                                    <% if session[:locale] == "en" %>
                                      <%= ann.title_en%>
                                    <% elsif session[:locale] == "zh-TW" %>
                                      <%= ann.title%>
                                    <% end %>
                                </a>
                            </li>
                        <% end %>
                    </ul>
                    <!-- 產品選單 end -->
                </section>
            </div>
            <!-- 次選單 end -->





        </div>
    </div>
</div>


<style>
div.row{
    display: -webkit-flex; /* Safari */
    -webkit-flex-direction: row-reverse; /* Safari 6.1+ */
    display: flex;
    flex-direction: row-reverse;
}
</style>
